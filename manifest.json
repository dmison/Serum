{
  "manifest_version": 2,
  "name": "Jekyll Post",
  "description": "This extension allows easy link blogging to a  github hosted Jekyll blog",
  "version": "1.0",
  "icons": {
    "128": "test_tube.png"
  },
  "options_page": "options.html",
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content_script.js"]
    }
  ],
  "permissions": [
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_icon": "test_tube.png",
    "default_popup": "popup.html"
  }
}
